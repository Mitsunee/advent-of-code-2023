{
  "name": "library-template",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": "YOUR_NAME_HERE",
  "repository": "foxkit-js/library-template",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "simple-git-hooks",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "eslint .",
    "lint:strict": "eslint --max-warnings 0 .",
    "typecheck": "tsc",
    "test": "uvu -r esbuild-register tests -i utils"
  },
  "nano-staged": {
    "**/*.{js,cjs,mjs,ts,mts,cts,json,md,yaml}": [
      "prettier -w"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  },
  "files": [
    "*.d.ts",
    "index.*"
  ],
  "clean-publish": {
    "packageManager": "pnpm",
    "withoutPublish": true,
    "tempDir": "dist",
    "fields": [
      "scripts",
      "nano-staged",
      "simple-git-hooks"
    ]
  },
  "publishConfig": {
    "access": "public",
    "main": "index.cjs",
    "module": "index.js",
    "types": "index.d.ts"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "clean-publish": "^4.2.0",
    "esbuild": "^0.19.8",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.54.0",
    "eslint-config-foxkit": "3.0.3",
    "eslint-config-prettier": "^9.0.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.2.0",
    "uvu": "^0.5.6"
  }
}
